
@{
    ViewBag.Title = "Activities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="hero hero-2" style="background-image: url('../../images/background1.jpg');">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 text-center mx-auto">
                <div class="intro">

                    <h1 class="heading mb-2" data-aos="fade-up" data-aos-delay="0">Activities</h1>
                    <p class="text-white" data-aos="fade-up" data-aos-delay="100">Activities are provided here.</p>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="post-entries section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-6 mx-auto" data-aos="fade-up" data-aos-delay="0">
                <div class="line mx-auto mb-3"></div>
                <h2 class="heading mb-5 text-center">Activity Searcher</h2>
            </div>
        </div>

        <div class="row align-items-stretch">
            <div class="col-12 col-sm-6 col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="100">
                <div class="media-entry h-100">
                    <a href="@Url.Action("Dodgeball", "Activities")" style="background-image: url('../../images/gal_1.jpg')" src='@Url.Content("~/images/gal_1.jpg")' />


                    <div class="bg-white m-body">
                        <p class="text-black-50 text-center">Dodgeball</p>

                        <a href="@Url.Action("Dodgeball", "Activities")" class="more d-flex align-items-center float-end">
                            <span class="label">Get started</span>
                            <span class="arrow"><span class="icon-keyboard_arrow_right"></span></span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="200">
                <div class="media-entry h-100">
                    <a href="@Url.Action("2", "2")" style="background-image: url('../../images/gal_1.jpg')" src='@Url.Content("~/images/gal_1.jpg")' />
                    <div class="bg-white m-body">
                        @*<span class="date">May 14, 2020</span>*@
                        <p class="text-black-50 text-center">Jump rope</p>


                        <a href="@Url.Action("2", "2")" class="more d-flex align-items-center float-end">
                            <span class="label">Get started</span>
                            <span class="arrow"><span class="icon-keyboard_arrow_right"></span></span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="300">
                <div class="media-entry h-100">
                    <a href="@Url.Action("3", "3")" style="background-image: url('../../images/gal_1.jpg')" src='@Url.Content("~/images/gal_1.jpg")' />

                    <div class="bg-white m-body">

                        <p class="text-black-50 text-center">Hopscotch</p>

                        <a href="@Url.Action("3", "3")" class="more d-flex align-items-center float-end">
                            <span class="label">Get started</span>
                            <span class="arrow"><span class="icon-keyboard_arrow_right"></span></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
