
@{
    ViewBag.Title = "DEECal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .hero-3 {
        height: 45vh;
    }
</style>

<div class="hero hero-3" style="background-image: url('../../images/cal.jpg');z-index:-1">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto">
                <div class="intro">
                    <h2 class="text-white heading text-center"  data-aos="fade-up" data-aos-delay="0">
                        Total Daily Energy Expenditure Calculator
                        @*<button class="btn-outline-info text-center" style="color:black;border-color:white; " onclick="TDEE()">i</button>*@
                    </h2>

                    @*<div id="tdee" style="display:none">*@
                <p class="text-white text-center" data-aos="fade-up" data-aos-delay="100">
                    This calculator would be the Harris Benedict equation to calculate your child’s calories needs.
                    The Harris Benedict equation is a formula that calculates total daily energy expenditure (TEE) the number of calories you need to consume daily in order to maintain your body weight over time.
                    PAL mentioned on this page expresses your child’s daily physical activity as a number.
                    The idea is to estimate how many calories one consumes on average each day and then make a conscious effort to obtain 15-20% less calories than estimated.

                </p>

                    @*  *@</div>
                </div>
            </div>


        </div>
</div>
<div class="post-entries section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-10 mx-auto">
                <div class="intro">

                    <div class=" col-lg-8 mx-auto">

                        <div data-aos="fade-up" data-aos-delay="200">
                            <div class="text-center">


                                <p class="text-dark">
                                    Height: <input type="text" id="height" />
                                    <select type="multiple" id="heightunits">
                                        <option value="centimetres" selected="selected">centimetres</option>
                                        <option value="inches">inches</option>
                                    </select>
                                </p>

                                <p class="text-dark">
                                    Weight: <input type="text" id="weight" />
                                    <select type="multiple" id="weightunits">
                                        <option value="kg" selected="selected">kilograms</option>
                                        <option value="lb">pounds</option>
                                    </select>
                                </p>



                                <table class="col-lg-8 mx-auto">
                                    <tr>
                                        <td>
                                            <p class="text-dark">
                                                Age:
                                                <select type="multiple" id="year">
                                                    <option value=10 selected="selected">10</option>
                                                    <option value=11>11</option>
                                                    <option value=12>12</option>

                                                </select>

                                            </p>

                                        </td>
                                        <td>
                                            <p class="text-dark">
                                                Month:
                                                <select type="multiple" id="month">
                                                    <option value=0 selected="selected">0</option>
                                                    <option value=1>1</option>
                                                    <option value=2>2</option>
                                                    <option value=3>3</option>
                                                    <option value=4>4</option>
                                                    <option value=5>5</option>
                                                    <option value=6>6</option>
                                                    <option value=7>7</option>
                                                    <option value=8>8</option>
                                                    <option value=9>9</option>
                                                    <option value=10>10</option>
                                                    <option value=11>11</option>
                                                    <option value=12>12</option>
                                                </select>

                                            </p>
                                        </td>

                                    </tr>
                                </table>

                                <p class="text-dark">
                                    Activity Factor:
                                    <select type="multiple" id="activityfactor">
                                        <option value=1.2 selected="selected">1.2 PAL(Sedentary, little or no exercise)</option>
                                        <option value=1.375>1.375 PAL(Light exercise/sports 1-3 days/week)</option>
                                        <option value=1.55>1.55 PAL(Moderate exercise/sports 3-5 days/week)</option>
                                        <option value=1.725>1.725 PAL(Hard exercise/sports 6-7 days a week)</option>
                                        <option value=1.9>1.9 PAL(Very hard exercise/sports & a physical job)</option>
                                    </select>
                                </p>
                                <p class="text-dark">
                                    Gender:
                                    <select type="multiple" id="gender">
                                        <option value="male" selected="selected">Boy</option>
                                        <option value="female">Girl</option>
                                    </select>
                                </p>
                                <input type="submit" class="mb-5"value="View Result" id="compute" onclick="computeDEE();">

                                <p id="need" class="block-testimonial text-dark" style="visibility:hidden"><span id="output"></span></p>
                                <p id="burn" class="block-testimonial text-dark" style="visibility:hidden">Recommended Calories to Burn Per Day: <span id="output_1"></span></p>
                                <p id="recommendations" class="block-testimonial text-dark" style="visibility:hidden">

                                    <a href="@Url.Action("LifestyleRecommendations", "Home")" class="d-flex float-end block-testimonial">
                                        Check healthy lifestyle recommendations                                     
                                    </a>
                                </p>
                                <a href="@Url.Action("BMI", "Home")" class="block-testimonial">
                                    <span class="label float-start ">Back to BMI</span>

                                </a>
                            </div>

                        </div>

                    </div>

                </div>
            </div>
            

        </div>

    </div>
</div>
<script>
    // user inputs
    window.onload = function () {
        document.getElementById("height").value = localStorage.getItem("height");
        document.getElementById("weight").value = localStorage.getItem("weight");

    };
    function computeDEE() {

        var height = Number(document.getElementById("height").value);
        var heightunits = document.getElementById("heightunits").value;
        var weight = Number(document.getElementById("weight").value);
        var weightunits = document.getElementById("weightunits").value;
        var age = Number(document.getElementById("year").value)  + Number(document.getElementById("month").value)/12;
        var activityfactor = document.getElementById("activityfactor").value;
        var gender = document.getElementById("gender").value;

        localStorage.setItem("height", height);
        localStorage.setItem("weight", weight);

        //Convert all units to metric
        if (heightunits == "inches") height /= 39.3700787;
        if (weightunits == "lb") weight /= 2.20462;


        if (gender == "male") {
            var BMR = Math.round((10 * weight + 6.25 * height - 5 * age + 5) * activityfactor);
        }
        else {
            var BMR = Math.round((10 * weight + 6.25 * height - 5 * age - 161) * activityfactor);
        }


        //Display result of calculation
        if (BMR > 0) {
            document.getElementById("output").innerText = "Your child’s total calorie need(kcal): " + BMR;
            document.getElementById("output_1").innerText = Math.round(BMR * 0.2);
            document.getElementById("need").style.visibility = "visible"
            document.getElementById("burn").style.visibility = "visible"
            document.getElementById("recommendations").style.visibility = "visible"
        }
        if (BMR <= 0) {
            document.getElementById("output").innerText = "Please provide correct information";
            document.getElementById("need").style.visibility = "visible"

        }



    }

</script>

<script>
    function TDEE() {
        var x = document.getElementById("tdee");
        if (x.style.display === "none") {
            x.style.display = "block";

        } else {
            x.style.display = "none";
        }
    }
</script>