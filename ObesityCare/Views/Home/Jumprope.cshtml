
@{
    ViewBag.Title = "Jumprope";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="hero hero-3" style="background-image: url('../../images/background1.jpg');">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 text-left mx-auto">
                <div class="intro">

                    <h1 class="heading mb-2" data-aos="fade-up" data-aos-delay="0" style="padding-bottom:30px">Jump rope</h1>
                    <div class="text-white" data-aos="fade-up" data-aos-delay="100">
                        <p class="block-testimonial">
                            A skipping rope is a tool used in the sport of jump rope where one or more participants jump over a rope swung so that it passes under their feet and over their heads. There are multiple subsets of jump rope including: single freestyle, single speed, pairs, three-person speed, and three-person freestyle. The events are often separated by gender and age. There are hundreds of competitive teams all around the world.
                        </p>

                    </div>

                </div>

            </div>
        </div>
    </div>
</div>


<div class="section">
    <div class="container">
        <div class="col-sm-12 col-md-12 col-lg-12" data-aos="fade-up" data-aos-delay="0">
            <div class="block-testimonial d-flex ">
                <div class="img col-lg-6">
                    <img src="~/images/jumprope.jpg" alt="Image" class="img-fluid" />
                </div>

                <div class="col-lg-6" style="padding-left:180px;">

                    <div class="heading mb-2" style="padding-top:20px; padding-bottom: 40px;">
                        Tips for Dodgeball:
                    </div>

                    <p>Number of participants: 1-many</p>
                    <p>
                        Recommended playtime: 10 min per session
                    </p>
                    <p>
                        Suggested Location: Backyard, Public Parks
                    </p>
                    <p>
                        Star Count: <span class="fa fa-star checked"></span>

                    </p>
                    <p>
                        Equipment Needed: Skipping Rope
                    </p>
                    <p>
                        Calories Burned: 125 for 10 mins
                    </p>
                    <div class="media-entry h-25">
                        <a href="http://www.jumpropeinstitute.com/benefits.htm" class="more d-flex align-items-center float-end">
                            <span class="label text-black-50 text-center">See more details on 'JumpRopeInstitute'</span>
                            <span class="arrow"><span class="icon-keyboard_arrow_right"></span></span>
                        </a>

                    </div>

                    <a href="@Url.Action("MapSearch", "Home")" class="d-flex float-end block-testimonial">
                        <span class="label">Find places for exercising</span>
                        <span class="arrow"><span class="icon-keyboard_arrow_right"></span></span>
                    </a>

                </div>


            </div>
        

        </div>

        <div class="site-nav" style="margin-top:1600px">

            <div class="site-navigation">
                <div class="js-clone-nav block-testimonial text-start site-menu float-left">
                    <div class="has-children">
                        <p>Other Activities</p>
                        <ul class="dropdown">
                            <li><a href="@Url.Action("Dodgeball", "Home")">Dodgeball</a></li>
                            <li>
                                <a href="@Url.Action("Hopscotch", "Home")">Hopscotch</a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>


    </div>
</div>

