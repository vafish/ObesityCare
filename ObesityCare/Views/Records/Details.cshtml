@model ObesityCare.Models.Record

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="hero hero-4" style="background-image: url('../../images/background1.jpg');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-10 mx-auto" style="background-color:white; opacity:0.75 ;min-height:250px;">
                    <div class="intro col-lg-8 mx-auto text-dark">

                        <h1 class="heading mb-2  text-dark" data-aos="fade-up" data-aos-delay="0" style="padding-top:50px;">Record Details</h1>
                        <div data-aos="fade-up" data-aos-delay="100">
                            <p class="block-testimonial">

                            </p>


                            <div class="row block-testimonial" >
                                <div class="text-dark">
                                    <span class="border-2 text-dark"> @Html.DisplayNameFor(model => model.Name)</span>


                                    <span>: </span>
                                    <span>@Html.DisplayFor(model => model.Name)</span>
                                </div>


                                <div class="text-dark ">

                                    <span>
                                        @Html.DisplayNameFor(model => model.Location)
                                    </span>
                                    <span>: </span>
                                    <span >
                                        @Html.DisplayFor(model => model.Location)
                                    </span>
                                </div>
                                <div class="text-dark">
                                    <span>
                                        @Html.DisplayNameFor(model => model.Duration)
                                    </span>
                                    <span>: </span>
                                    <span>
                                        @Html.DisplayFor(model => model.Duration)
                                    </span>
                                </div>
                                <div class="text-dark">
                                    <span>
                                        @Html.DisplayNameFor(model => model.Star)
                                    </span>
                                    <span>: </span>
                                    <span>
                                        @Html.DisplayFor(model => model.Star)
                                    </span>
                                </div>



                            </div>

                            <div class="col-3 mb-2 btn btn-outline-secondary"style="margin-top:30px">@Html.ActionLink("Back to List", "Index")</div>

                            @*<div class="col-3 mb-2 btn btn-outline-secondary" style="margin-left:40%">@Html.ActionLink("Edit", "Edit")</div>*@

                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
}