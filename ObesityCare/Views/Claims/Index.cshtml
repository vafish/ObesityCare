@model IEnumerable<ObesityCare.Models.Claim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="hero hero-4" style="background-image: url('../../images/background1.jpg');">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-10 text-left mx-auto">
                <div class="intro">

                    <h1 class="heading mb-2" data-aos="fade-up" data-aos-delay="0">Records</h1>
                    <div class="text-white" data-aos="fade-up" data-aos-delay="100">
                        <p class="block-testimonial">
                            Claim records.
                        </p>

                    </div>

                    <div style="min-height: 250px;background-color:white; opacity:0.75">

                        <table class="table" style="">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Item)
                                </th>
                                @*<th>
                        @Html.DisplayNameFor(model => model.Location)
                    </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>


                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Item)
                                    </td>
                                    @*<td>
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>


                                    <td>
                                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                                        @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                                    </td>
                                </tr>
}

                        </table>


                    </div>
                    <p class="btn btn-light" style="margin-left:80%;margin-top:10px;opacity:0.8">
                        @Html.ActionLink("Back to Rewards", "Index", "Rewards")
                    </p>
                </div>

            </div>
        </div>
    </div>
</div>
