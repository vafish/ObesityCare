@model ObesityCare.Models.Reward

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="hero hero-4" style="background-image: url('../../images/background1.jpg');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-10 mx-auto" style="background-color:white; opacity:0.75;">
                    <div class="intro col-lg-8 mx-auto text-dark">

                        <h1 class="heading mb-2  text-dark" data-aos="fade-up" data-aos-delay="0" style="padding-top:30px;">Delete Reward</h1>
                        <div data-aos="fade-up" data-aos-delay="100">



                            <div class="row block-testimonial" style="padding-top:20px;">
                                <div class="text-dark">
                                    <span class="border-2 text-dark"> @Html.DisplayNameFor(model => model.Name)</span>


                                    <span>: </span>
                                    <span>@Html.DisplayFor(model => model.Name)</span>
                                </div>

                                <div class="text-dark">
                                    <span>
                                        @Html.DisplayNameFor(model => model.Cost)
                                    </span>
                                    <span>: </span>
                                    <span>
                                        @Html.DisplayFor(model => model.Cost)
                                    </span>
                                </div>
                              

                                <div class="col-3 mb-3 btn btn-outline-secondary" style="margin-top:30px;">@Html.ActionLink("Back to List", "Index")</div>

                                <div class="col-4 mb-3" style="padding-left:50%; margin-top:30px;">

                                    <input type="submit" class="btn btn-outline-secondary" value="Delete" />

                                </div>



                            </div>



                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

}