@model IEnumerable<ObesityCare.Models.Reward>
@using ObesityCare.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="hero hero-4" style="background-image: url('../../images/background1.jpg');">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-10 text-left mx-auto">
                <div class="intro">

                    <h1 class="heading mb-2" data-aos="fade-up" data-aos-delay="0">Rewards</h1>
                    <div class="text-white" data-aos="fade-up" data-aos-delay="100">
                        <p class="block-testimonial">
                            Reward your children.
                        </p>

                    </div>

                    <div style="min-height: 250px;background-color:white; opacity:0.75">
                        <p class="text-dark" style="margin-left:80%">
                            @{
                                var data = ViewData["totalstar"];
                            }
                            Total Star: @data
                        </p>
                        <table class="table" style="">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.Location)
                                    </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.Cost)
                                </th>


                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.Location)
                                        </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cost) <span> Star</span>
                                    </td>


                                    <td>
                                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })|
                                        @Html.ActionLink("Claim", "Claim", new { id = item.Id })
                                    </td>
                                </tr>
                            }

                        </table>
                        <p class="btn btn-outline-secondary" style="margin-left:80%;margin-top:100px;">
                            @Html.ActionLink("Add Reward", "Create")
                        </p>

                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

